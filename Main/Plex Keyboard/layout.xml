<?xml version="1.0" encoding="utf-8"?>
<layout onlaunch="launch" color="orange">
	<tabs>
		<tab text="Main">
			<row>
				<button icon="back" ontap="back" />
				<button color="grey" icon="up" ontap="up" />
				<button icon="playpause" ontap="play_current" />
			</row>
			<row>
				<button color="grey" icon="left" ontap="left" />
				<button color="grey" icon="select" ontap="select" />
				<button color="grey" icon="right" ontap="right" />
			</row>
			<row>
				<button icon="previous" ontap="previous" />
				<button color="grey" icon="down" ontap="down" />
				<button icon="next" ontap="next" />
			</row>
			<row>
				<button text="" ontap="menu" />
				<button text="Home" ontap="home" />
				<button text="" ontap="osd" />
			</row>
		</tab>
		<tab text="Play">
			<row>
				<button icon="rwd" ontap="rewind" />
				<button icon="ff" ontap="forward" />
			</row>
			<row>
				<button icon="previous" ontap="skip_prev" />
				<button icon="next" ontap="skip_next" />
			</row>
			<row>
				<button icon="stop" ontap="stop" />
				<button icon="playpause" ontap="play_pause" />
			</row>
		</tab>
	</tabs>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout onLaunch="launch" onVolumeUp="volume_up" onVolumeDown="volume_down">
	<tabs>
		<tab text="Player">
			<row>
				<label id="info" />
			</row>
			<row>
				<button icon="vdown" onTap="volume_down" />
				<button icon="vup" onTap="volume_up" />
			</row>
			<row>
				<button icon="previous" onTap="previous" />
				<button icon="next" onTap="next" />
			</row>
			<row>
				<button icon="thumbsdown" onTap="thumbs_down" />
				<button icon="thumbsup" onTap="thumbs_up" />
			</row>
			<row>
				<button icon="shuffle" onTap="play_shuffle" />
				<button icon="playpause" onTap="play_pause" />
				<button icon="repeat" onTap="play_repeat" />
			</row>
		</tab>
		<tab text="Playlists">
			<list id="playlists" ontap="playlist" />
		</tab>
		<tab text="Tracks">
			<list id="tracks" ontap="track" />
		</tab>
	</tabs>
</layout>